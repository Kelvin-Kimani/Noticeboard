<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAssociators">

    <RelativeLayout
        android:id="@+id/nofollowersRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/nofollowerstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no followers"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_title"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can only add associators if you have followers"
            android:layout_below="@id/nofollowerstitle"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addAssociatorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</RelativeLayout>