<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpExtended">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profiletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Profile Details"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/createusertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="@string/create_page_text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/profiletext"/>

            <EditText
                android:id="@+id/fullnames"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_below="@id/createusertext"
                android:ems="10"
                android:hint="@string/fullnames"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/prefix"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/fullnames"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:text="@string/phoneprefix"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_below="@id/fullnames"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/phonenumber"
                android:inputType="textPersonName"
                android:layout_marginLeft="150dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/phonenumber"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/regno"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_below="@id/spinner"
                android:ems="10"
                android:hint="@string/regno"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/submitbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/regno"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/next"
                android:layout_alignRight="@+id/regno"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:onClick="saveUserDetails"
                />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>