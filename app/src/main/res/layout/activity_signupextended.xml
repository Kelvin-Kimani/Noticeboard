<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpExtended">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profiletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Profile Details"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Please fill In the information below"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
               android:layout_below="@+id/profiletext"
                />

            <EditText
                android:id="@+id/fullnames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_below="@id/instruction"
                android:ems="15"
                android:hint="@string/fullnames"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/prefix"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/fullnames"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:text="@string/phoneprefix"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullnames"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:hint="@string/phonenumber"
                android:inputType="number"
                android:layout_marginLeft="150dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_below="@id/phonenumber"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/regno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@id/spinner"
                android:ems="15"
                android:hint="@string/regno"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/submitbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/regno"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Nxt"
                android:layout_alignRight="@+id/regno"/>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>