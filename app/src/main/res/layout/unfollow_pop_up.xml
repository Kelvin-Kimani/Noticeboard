<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/unfollowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="Unfollow "
            android:textColor="@color/color_title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/defaulttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unfollowTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="You will no longer receive posts from the page"
            android:textColor="@color/tabtextcolor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/defaulttext"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@color/tabtextcolor1" />

        <RelativeLayout
            android:id="@+id/unfollowview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_20dp"
                android:text="Unfollow"
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>