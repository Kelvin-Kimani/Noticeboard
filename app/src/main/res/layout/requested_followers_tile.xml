<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userprofileimg"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_image_avatar" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userprofileimg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="John Doe"
            android:textColor="@color/color_title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/userprofileimg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Level"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/acceptRequest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/cancelRequest"
            android:background="@drawable/button_clicked"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:src="@drawable/ic_check_black_24dp"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/cancelRequest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@color/colorPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_title" />

    </RelativeLayout>

</RelativeLayout>