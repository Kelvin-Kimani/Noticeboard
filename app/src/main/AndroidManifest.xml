<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noticeboard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".PagePosts"
            android:theme="@style/CustomActivityTheme"
            android:parentActivityName=".PageProfileAdmin"/>

        <activity
            android:name=".AssociationPages"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".Pages"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".PostWithComments"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".PageProfileUser"
            android:theme="@style/CustomActivityTheme"
            android:parentActivityName=".Pages"/>

        <activity
            android:name=".PageProfileAdmin"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".UserProfile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".SavedPost"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActivityTheme" />

        <activity
            android:name=".AddUserProfile"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity android:name=".CreatePageProfile" />

        <activity
            android:name=".PostPage"
            android:theme="@style/CustomActivityTheme"
            android:parentActivityName=".PagePosts"/>

        <activity
            android:name=".Login"
            android:theme="@style/ColorStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name=".SignUpExtended"
            android:theme="@style/CustomActivityTheme"/>


        <activity
            android:name=".CreatePage"
            android:label="@string/create_page"
            android:parentActivityName=".Pages"
            android:theme="@style/CustomActivityTheme" />

        <activity android:name=".ResetPassword"
            android:theme="@style/CustomActivityTheme"
            android:parentActivityName=".Login"/>

        <activity
            android:name=".SignUp"
            android:theme="@style/ColorStyle" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>


        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
    </application>

</manifest>